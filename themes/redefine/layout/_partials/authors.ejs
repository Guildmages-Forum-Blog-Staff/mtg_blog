<style>
    .article-footer .author-container {
        display: flex;
        gap: 20px;
    }

    .article-footer .author-container .item {
        margin-top: 20px;
        display: flex;
    }

    .article-footer .author-container .item .avatar-column {
        width: 30%;
        display: flex;
        place-items: center;
    }

    .article-footer .author-container .item .avatar img {
        border-radius: 50%;
        width: 40vw;
        height: auto;
    }

    .article-footer .author-container .item .author-intro-left {
        width: 80%;
        margin-right: 20px;
        justify-content: end;
    }

    .article-footer .author-container .item .author-intro-left .author-name {
        margin-top: 10px;
        font-size: 2em;
        display: grid;
        justify-content: end;
    }

    .article-footer .author-container .item .author-intro-left .intro-left {
        margin-top: 10px;
        display: grid;
        justify-content: end;
    }

    .article-footer .author-container .item .author-intro-left .intro-left .intro-content-left {
        display: grid;
        justify-content: end;
    }

    .article-footer .author-container .item .author-intro-right {
        width: 80%;
        margin-left: 20px;
    }

    .article-footer .author-container .item .author-intro-right .author-name {
        margin-top: 10px;
        font-size: 2em;
    }

    .article-footer .author-container .item .author-intro-right .intro-right {
        margin-top: 10px;
    }
</style>

<div class="nf-text">
    <div class="nf-container">
        <h1>Meow, Authors Page Is Still Building.</h1>
    </div>
    <% const author_list = ['MiohitoKiri5474', 'cephille', 'JruMTG', 'JerobaMTG', 'Enki', 'T1BloodMoon', 'Kappa', 'ClarkShih', 'jeffchen', 'classiccool', 'yu-chen', 'bruce1235566', 'GY_Player', 'zhi-mao', 'david-yeh', 'JerryYang', 'Egavas', 'layukipedia', 'faintmama', 'ZHAN' ]; %>
    <% const author_num = author_list.length; %>
    <% for (let idx = 0; idx < author_num; idx++ ) { %>
        <% const current_author = author_list[idx]; %>
        <% const author_info = author_info_str(current_author); %>
        <% const author_name = author_info.name; %>
        <% const avatar = author_info.avatar; %>
        <% const intro = author_info.intro; %>
        <% const author_url_result = author_info.url; %>
        <% if (idx % 2 === 0 ) { %>
            <div class="article-footer flex flex-row gap-2 items-center px-2 sm:px-6 md:px-8">
                <div class="info flex flex-col justify-between">
                    <div class="author-container">
                        <div class="item">
                            <div class="avatar-column">
                                <a href="<%- author_url_result %>" class="author flex items-center name text-default-text-color text-lg font-semibold flex">
                                    <div class="avatar flex-shrink-0p-[1px]">
                                        <%- image_tag(avatar) %>
                                    </div>
                                </a>
                            </div>
                            <div class="author-intro-right items-center">
                                <div class="author-name">
                                    <a href="<%- author_url_result %>" class="text-default-text-color font-semibold p-10px">
                                        <%= author_name %>
                                    </a>
                                </div>
                                <% const intro_length = intro.length; %>
                                <div class="intro-right">
                                    <% for (let j = 0; j < intro_length; j++ ) { %>
                                        <p>
                                            <%= intro[j] %>
                                        </p>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="article-footer flex flex-row gap-2 items-center px-2 sm:px-6 md:px-8">
                <div class="info flex flex-col justify-between">
                    <div class="author-container">
                        <div class="item">
                            <div class="author-intro-left items-center">
                                <div class="author-name">
                                    <a href="<%- author_url_result %>" class="text-default-text-color font-semibold p-10px">
                                        <%= author_name %>
                                    </a>
                                </div>
                                <% const intro_length = intro.length; %>
                                <div class="intro-left">
                                    <% for (let j = 0; j < intro_length; j++ ) { %>
                                        <p class="intro-content-left">
                                            <%= intro[j] %>
                                        </p>
                                    <% } %>
                                </div>
                            </div>
                            <div class="avatar-column">
                                <a href="<%- author_url_result %>" class="author flex items-center name text-default-text-color text-lg font-semibold flex">
                                    <div class="avatar flex-shrink-0p-[1px]">
                                        <%- image_tag(avatar) %>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    <% } %>
</div>
